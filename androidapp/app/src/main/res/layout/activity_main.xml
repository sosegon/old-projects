<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="@string/app_name"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        tools:text="Seasonify">
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/pgr"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ViewFlipper
        android:id="@+id/vfl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/ll_main"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/surface_horizontal_margin"
            android:layout_marginEnd="@dimen/surface_horizontal_margin"
            android:background="#fff"
            android:elevation="@dimen/surface_elevation"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/horizontal_divider">

                <TextView
                    android:id="@+id/txt_season"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_horizontal_height"
                    android:textSize="24sp"
                    android:gravity="center"
                    tools:text="Season"
                    android:elevation="@dimen/surface_elevation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/vertical_divider"
                    android:elevation="@dimen/surface_elevation">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imv_single_sel"
                            style="@style/ic_color_selection"
                            android:src="@drawable/ic_sel_single"
                            android:background="@drawable/color_selector_status" />
                        <ImageView
                            android:id="@+id/imv_complementary_sel"
                            style="@style/ic_color_selection"
                            android:src="@drawable/ic_sel_complementary"
                            android:background="@drawable/color_selector_status" />
                        <ImageView
                            android:id="@+id/imv_triad_sel"
                            style="@style/ic_color_selection"
                            android:src="@drawable/ic_sel_triad"
                            android:background="@drawable/color_selector_status" />
                        <ImageView
                            android:id="@+id/imv_analogous_sel"
                            style="@style/ic_color_selection"
                            android:src="@drawable/ic_sel_analogous"
                            android:background="@drawable/color_selector_status" />
                        <ImageView
                            android:id="@+id/imv_quad_sel"
                            style="@style/ic_color_selection"
                            android:layout_marginBottom="@dimen/icon_margin"
                            android:src="@drawable/ic_sel_quad"
                            android:background="@drawable/color_selector_status" />
                    </LinearLayout>

                    <com.keemsa.colorwheel.ColorPickerView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/color_wheel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/surface_horizontal_margin"
                        android:layout_marginEnd="@dimen/surface_horizontal_margin"
                        app:wheelType="ARC"
                        app:innerRadiusRatio=".75"
                        app:centerRadiusRatio="0.5"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bar_horizontal_height"
                    android:orientation="horizontal">

                    <com.keemsa.colorpalette.ColorPalette
                        android:id="@+id/plt_combination"
                        android:layout_height="@dimen/bar_horizontal_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/icon_margin"
                        app:spectrum_checkable="false"
                        app:spectrum_columnCount="4"
                        />

                    <ImageView
                        android:id="@+id/imv_fav"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginEnd="@dimen/icon_margin"
                        android:layout_marginTop="@dimen/icon_margin"
                        android:layout_marginBottom="@dimen/icon_margin"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:background="@drawable/fav_status"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_just_started"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera"/>

            <TextView
                android:id="@+id/txt_start"
                android:text="@string/msg_start_here"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ViewFlipper>

</LinearLayout>

