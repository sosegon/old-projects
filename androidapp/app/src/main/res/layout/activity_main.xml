<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="@string/app_name"
            android:background="@color/colorPrimary"
            tools:text="Seasonify">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/txt_season"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="24sp"
            android:layout_marginTop="@dimen/surface_vertical_margin"
            android:layout_marginStart="@dimen/surface_horizontal_margin"
            android:layout_marginEnd="@dimen/surface_horizontal_margin"
            android:layout_marginBottom="@dimen/surface_vertical_margin"
            android:gravity="center"
            tools:text="Season"
            android:background="#fff"
            android:elevation="@dimen/surface_elevation"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/surface_horizontal_margin"
            android:layout_marginEnd="@dimen/surface_horizontal_margin"
            android:layout_marginBottom="@dimen/surface_vertical_margin"
            android:background="#fff"
            android:elevation="@dimen/surface_elevation"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imv_single_sel"
                style="@style/ic_color_selection"
                android:background="@drawable/ic_single_color" />
            <ImageView
                android:id="@+id/imv_complementary_sel"
                style="@style/ic_color_selection"
                android:background="@drawable/ic_complementary_color" />
            <ImageView
                android:id="@+id/imv_triad_sel"
                style="@style/ic_color_selection"
                android:background="@drawable/ic_triad_color" />
            <ImageView
                android:id="@+id/imv_analogous_sel"
                style="@style/ic_color_selection"
                android:background="@drawable/ic_analogous_color" />
            <ImageView
                android:id="@+id/imv_quad_sel"
                style="@style/ic_color_selection"
                android:background="@drawable/ic_quad_color" />
        </LinearLayout>

        <com.keemsa.colorwheel.ColorPickerView
            android:id="@+id/color_wheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/surface_horizontal_margin"
            android:layout_marginEnd="@dimen/surface_horizontal_margin"
            android:layout_marginBottom="@dimen/surface_vertical_margin"
            android:background="#fff"
            android:elevation="@dimen/surface_elevation"
            app:wheelType="ARC"
            app:innerRadiusRatio=".75"
            app:colorSelection="TRIAD"
            />

        <com.keemsa.colorpalette.ColorPalette
            android:id="@+id/plt_combination"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/surface_horizontal_margin"
            android:layout_marginEnd="@dimen/surface_horizontal_margin"
            android:layout_marginBottom="@dimen/surface_vertical_margin"
            android:background="#fff"
            android:elevation="@dimen/surface_elevation"
            android:visibility="gone"
            app:spectrum_autoPadding="true"
            app:spectrum_checkable="false"
            />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_scan"
        android:stateListAnimator="@anim/fab_state_list_anim"
        android:background="@drawable/fab_scan_background"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_face"
        android:elevation="@dimen/fab_elevation"
        android:contentDescription="@string/action_scan"
        android:clickable="true"
        app:layout_anchorGravity="bottom|right|end"/>
</FrameLayout>
